<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four Dice Roll"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Dice Container LinearLayout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Top Dice Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Top Left Dice ImageView -->
            <ImageView
                android:id="@+id/dice_image_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dice_1"
                android:layout_marginEnd="15dp" />

            <!-- Top Right Dice ImageView -->
            <ImageView
                android:id="@+id/dice_image_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dice_1" />

        </LinearLayout>

        <!-- Bottom Dice Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Bottom Left Dice ImageView -->
            <ImageView
                android:id="@+id/dice_image_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dice_1"
                android:layout_marginEnd="15dp" />

            <!-- Bottom Right Dice ImageView -->
            <ImageView
                android:id="@+id/dice_image_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dice_1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Result TextView -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result: 4 (1+1+1+1)"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Roll Button -->
    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Dice"
        android:textSize="16sp"
        android:padding="12dp" />

</LinearLayout>
